FROM python:3.12-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy integration files
COPY requirements.txt* ./

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir \
        anthropic>=0.30 \
        openai>=1.40 \
        httpx>=0.27 \
        pytz>=2024.1 \
        apscheduler>=3.10 \
        psutil>=5.9 \
        python-dotenv>=1.0 \
        openpyxl>=3.1 \
        python-docx>=1.1 \
        reportlab>=4.0 \
        scipy>=1.13 \
        numpy>=1.26 \
        pandas>=2.2

# Create symphony directories
RUN mkdir -p /root/.symphony/data \
    /root/.symphony/logs \
    /root/.symphony/clawwork/deliverables \
    /root/.symphony/clawwork/gdpval \
    /root/.symphony/reports/clawwork

# Default command
CMD ["python", "/app/bob_side_hustle.py", "--daemon"]
